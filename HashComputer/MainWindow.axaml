<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="700"
		Height="280"
        x:Class="HashComputer.MainWindow"
        Title="HashComputer"
		x:CompileBindings="False">
	<Grid RowDefinitions="*,Auto,*"
		  ColumnDefinitions="*,Auto,Auto,*">
		<StackPanel Grid.Row="1"
					Grid.Column="1"
					Width="300">
			<TextBlock Text="Folder path"/>
			<TextBox Text="{Binding FolderPath, Mode=TwoWay}"
					 TextWrapping="Wrap"/>
			
			<ProgressBar Margin="0,16,0,0"
						 Minimum="0"
						 Maximum="100"
						 Value="{Binding CurrentProgress}"
						 Height="10"
						 IsVisible="{Binding IsProgressVisible}"/>

			<StackPanel Orientation="Horizontal"
						Margin="0,16,0,0">
				<Button Content="Compute"
						Command="{Binding ComputeHashCommand}"
						IsEnabled="{Binding IsComputeButtonEnabled}"/>
				
				<TextBlock Text="Done"
						   VerticalAlignment="Center"
						   Margin="16,0"
						   Foreground="Green"
						   FontWeight="Bold"
						   IsVisible="{Binding IsDoneVisible}"/>
				<TextBlock Text="Failure"
						   VerticalAlignment="Center"
						   Margin="16,0"
						   Foreground="Red"
						   FontWeight="Bold"
						   IsVisible="{Binding IsFailureVisible}"/>
			</StackPanel>
			
			<TextBlock Text="{Binding ErrorText}"
					   IsVisible="{Binding IsFailureVisible}"
					   Margin="0,16,0,0"
					   TextWrapping="Wrap"
					   Foreground="DarkRed"/>

			<TextBlock Text="Current file:"
					   Margin="0,16,0,0"
					   IsVisible="{Binding IsProgressVisible}"/>
			<TextBlock Text="{Binding CurrentFile}"
					   TextWrapping="Wrap"
					   Margin="0,6,0,0"
					   IsVisible="{Binding IsProgressVisible}"/>
		</StackPanel>

		<StackPanel Grid.Row="1"
					Grid.Column="2"
					Width="350"
					IsVisible="{Binding IsDiffTextVisible}"
					Margin="6,0,0,0">
			<TextBlock Text="There was already a hash file. Here are the files that changed or not presented yet:"
					   TextWrapping="Wrap"/>
			<TextBox IsReadOnly="True"
					 Text="{Binding DiffText}"
					 Height="200"
					 TextWrapping="Wrap"
					 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
		</StackPanel>
	</Grid>
</Window>
